<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=5,user-scalable=yes" />
    <title>后台管理</title>
    <link rel="stylesheet" type="text/css" href="/static/admin/css/admin.css" />
    <link rel="stylesheet" type="text/css" href="/static/admin/layui/css/layui.css" />
    <style>
        .layui-nav-tree {
            width: 220px; /*Sinsen at 2018年6月4日，适应长文菜单*/
        }

        .layui-icon {
            font-size: 1.3em;
            margin-right: 0.5em;
        }

        .my-logo {
            width: auto;
            height: 60px;
            background: #00b5f9;
            color: white;
            padding: 5px;
            font-size: 1.5em;
        }
    </style>
</head>

<body>
    <div class="main-layout" id='main-layout'>
        <!--侧边栏-->
        <div class="main-layout-side">
            <!--div class="m-logo"-->
            <div class="my-logo">
                校园水电收费管理信息系统
            </div>
            <ul class="layui-nav layui-nav-tree" lay-filter="leftNav">
                <li class="layui-nav-item">
                    <a href="javascript:;" data-url="/used/index?name=" data-id='1' data-text="登记信息管理"><i class="layui-icon">&#xe60e;</i>用量登记管理</a>
                </li>
                @if (Convert.ToInt32(Session["role"]) > 1)
                {
                    <li class="layui-nav-item">
                        <a href="javascript:;" data-url="/bill/index?name=" data-id='2' data-text="账单管理"><i class="layui-icon">&#xe65e;</i>账单管理</a>
                    </li>
                    <li class="layui-nav-item">
                        <a href="javascript:;"><i class="layui-icon">&#xe667;</i>公告管理</a>
                        <dl class="layui-nav-child">
                            <dd>
                                <a href="javascript:;" data-url="/notice/index?name=" data-id='5' data-text="查看公告"><span class="l-line"></span>查看公告</a>
                            </dd>
                            <dd>
                                <a href="javascript:;" data-url="/notice/create" data-id='6' data-text="发布公告"><span class="l-line"></span>发布公告</a>
                            </dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item">
                        <a href="javascript:;"><i class="layui-icon">&#xe716;</i>系统管理</a>
                        <dl class="layui-nav-child">
                            <dd>
                                <a href="javascript:;" data-url="/users/index?name=" data-id='22' data-text="系统角色管理"><span class="l-line"></span>系统角色管理</a>
                            </dd>
                            @if (Convert.ToInt32(Session["role"]) > 2)
                            {
                                <dd>
                                    <a href="javascript:;" data-url="/admin/system" data-id='21' data-text="费率及基础配额设置"><span class="l-line"></span>费率及基础配额设置</a>
                                </dd>
                                <dd>
                                    <a href="javascript:;" data-url="/admin/log?name=" data-id='23' data-text="查看系统日志"><span class="l-line"></span>查看系统日志</a>
                                </dd>
                            }
                        </dl>
                    </li>
                    <!--
                        作者：sinsen
                        时间：2018-06-09
                        描述：宿舍管理员菜单开始
                    -->
                    <li class="layui-nav-item">
                        <a href="javascript:;"><i class="layui-icon">&#xe656;</i>基础数据管理</a>
                        <dl class="layui-nav-child">
                            @if (Convert.ToInt32(Session["role"]) > 2)
                            {
                                <!--
                                    作者：sinsen
                                    时间：2018-06-10
                                    描述：系统管理员菜单
                                -->
                                <dd>
                                    <a href="javascript:;" data-url="/dorm/index?name=" data-id='7' data-text="园区管理"><span class="l-line"></span>园区管理</a>
                                </dd>
                            }
                            <dd>

                                <a href="javascript:;" data-url="/building/index?name=" data-id='8' data-text="宿舍楼管理"><span class="l-line"></span>宿舍楼管理</a>
                            </dd>
                            <dd>
                                <a href="javascript:;" data-url="/room/index?name=" data-id='9' data-text="宿舍管理"><span class="l-line"></span>宿舍管理</a>
                            </dd>
                            <dd>
                                <a href="javascript:;" data-url="/used/admin-total?name=" data-id='10' data-text="宿舍水电表管理"><span class="l-line"></span>宿舍水电表管理</a>
                            </dd>
                        </dl>
                    </li>
                    <!--
                        作者：sinsen
                        时间：2018-06-09
                        描述：宿舍管理员菜单结束
                    -->}
                <li class="layui-nav-item">
                    <a href="javascript:;" data-url="/users/info" data-id='99' data-text="个人信息"><i class="layui-icon">&#xe66f;</i>个人信息</a>
                </li>
                @if (Convert.ToInt32(Session["role"]) > 2)
                {
                    <!--
                        作者：sinsen
                        时间：2018-06-09
                        描述：
                    -->
                    <li class="layui-nav-item">
                        <a href="javascript:;" data-url="/admin/charts" data-id='100' data-text="数据图表"><i class="layui-icon">&#xe62c;</i>数据图表</a>
                    </li>}
                }
            </ul>
        </div>
        <!--右侧内容-->
        <div class="main-layout-container">
            <!--头部-->
            <div class="main-layout-header">
                <div class="menu-btn" id="hideBtn">
                    <a href="javascript:;">
                        <span class="iconfont">&#xe60e;</span>
                    </a>
                </div>
                <ul class="layui-nav" lay-filter="rightNav">
                    <li class="layui-nav-item">
                        <a href="javascript:;" style="color:rgb(150,150,150)" data-url="/user/info" data-id='5' data-text="个人信息">@Session["nickname"]</a>
                    </li>
                    <li class="layui-nav-item">
                        <a href="/admin/logout" style="color:rgb(150,150,150)">退出</a>
                    </li>
                </ul>
            </div>
            <!--主体内容-->
            <div class="main-layout-body">
                <!--tab 切换-->
                <div class="layui-tab layui-tab-brief main-layout-tab" lay-filter="tab" lay-allowClose="true">
                    <ul class="layui-tab-title">
                        <li class="layui-this welcome">数据概览</li>
                    </ul>
                    <div class="layui-tab-content">
                        <div class="layui-tab-item layui-show" style="background: #f5f5f5;">
                            <!--1-->
                            <iframe src="/admin/welcome" width="100%" height="100%" name="iframe" scrolling="auto" class="iframe" framborder="0"></iframe>
                            <!--1end-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--遮罩-->
        <div class="main-mask">

        </div>
    </div>
    <script type="text/javascript">
        var scope = {
            link: '/admin/welcome'
        }
    </script>
    <script src="/static/admin/layui/layui.js" type="text/javascript" charset="utf-8"></script>
    <script src="/static/admin/js/common.js" type="text/javascript" charset="utf-8"></script>
    <script src="/static/admin/js/main.js" type="text/javascript" charset="utf-8"></script>
</body>
</html>