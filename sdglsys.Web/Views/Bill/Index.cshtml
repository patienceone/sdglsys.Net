<!DOCTYPE html>
<html class="iframe-h">

<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport"
          content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>账单管理</title>
    <link rel="stylesheet" type="text/css" href="~/Content/layui/css/layui.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/admin.css" />
</head>

<body>
    <div class="wrap-container clearfix">
        <div class="column-content-detail">
            <form class="layui-form" action="">
                <div class="layui-form-item">
                    <div class="layui-inline tool-btn">
                        <button class="layui-btn layui-btn-sm layui-btn-normal addBtn" data-url="/Bill/Create" data-text="添加账单">
                            <i class="layui-icon">&#xe654;</i>
                        </button>
                        <button class="layui-btn layui-btn-sm layui-btn-normal reloadBtn" title="点击刷新显示">
                            <i class="layui-icon layui-icon-refresh"></i>
                        </button>
                    </div>
                    <div class="layui-inline">
                        <input value="@ViewBag.keyword" type="text" name="keyword" placeholder="关键字" autocomplete="off"
                               class="layui-input">
                    </div>
                    <div class="layui-inline">
                        <select name="stat" id="stat">
                            <option value="-1">请选择一个状态</option>
                            <option value="1">已登记</option>
                            <option value="2">已结算</option>
                            <option value="0">已注销</option>
                        </select>
                    </div>
                    <button class="layui-btn layui-btn-normal" lay-submit="search">搜索</button>
                </div>
            </form>
            <div class="layui-form" id="table-list">
                <div>总共：@ViewBag.count 条记录</div><table class="layui-table" lay-even lay-skin="nob">
                    <colgroup>
                        <col class="hidden-xs">
                        <col>
                        <col>
                        @if ((int)Session["role"] > 2)
                        {
                            <col class="hidden-xs">}
                        <col>
                        <col>
                        <col>
                        <col class="hidden-xs">
                        @if ((int)Session["role"] > 1)
                        {
                            <col class="hidden-md">}
                        <col class="hidden-xs">
                        <col>
                        <col>
                    </colgroup>
                    <thead>
                        <tr>
                            <th class="hidden-xs">ID</th>
                            <th>宿舍名称</th>
                            <th>所属宿舍楼</th>
                            @if ((int)Session["role"] > 2)
                            {
                                <th class="hidden-xs">所属园区</th>}
                            <th class="hidden-xs">冷水费用</th>
                            <th class="hidden-xs">热水费用</th>
                            <th class="hidden-xs">电力费用</th>
                            <th>总额</th>
                            <th class="hidden-xs">更新时间</th>
                            <th>状态</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bill in ViewBag.bills)
                        {
                            <tr>
                                <td class="hidden-xs">@bill.Id</td>
                                <td>@bill.PNickname</td>
                                <td>@bill.Building_Nickname</td>
                                @if ((int)Session["role"] > 2)
                                {
                                    <td class="hidden-xs">@bill.Dorm_Nickname</td>}
                                @{
                                    var Cold_water_cost = Math.Round(bill.Cold_water_cost, 2);
                                    var Hot_water_cost = Math.Round(bill.Hot_water_cost, 2);
                                    var Electric_cost = Math.Round(bill.Electric_cost, 2);
                                    var Cold_water_value = Math.Round(bill.Cold_water_value, 2);
                                    var Hot_water_value = Math.Round(bill.Hot_water_value, 2);
                                    var Electric_value = Math.Round(bill.Electric_value, 2);
                                    var total = Math.Round(bill.Hot_water_cost + bill.Cold_water_cost + bill.Electric_cost, 2);
                                }
                                <td class="hidden-xs">@Cold_water_cost ￥</td>
                                <td class="hidden-xs">@Hot_water_cost ￥</td>
                                <td class="hidden-xs">@Electric_cost ￥</td>
                                <td>@total ￥</td>
                                <td class="hidden-xs">@bill.Mod_date</td>
                                <td>
                                    @{ var label_stat = "<div class='layui-btn layui-btn-xs layui-btn-danger'>已登记</label>";}
                                    @switch ((int)bill.Is_active)
                                    {
                                        case 0:
                                            label_stat = "<div class='layui-btn layui-btn-xs layui-btn-disabled'>已注销</label>";
                                            break;
                                        case 2:
                                            label_stat = "<div class='layui-btn layui-btn-xs'>已缴费</label>";
                                            break;
                                    }
                                    @Html.Raw(label_stat)
                                </td>
                                <td>
                                    <div class="layui-btn-group">
                                        <button class="layui-btn layui-btn-sm layui-btn-primary pay-btn" data-id="@bill.Id"
                                                data-url="/Bill/Pay/@bill.Id" data-text="结算该账单">
                                            <i class="layui-icon">&#xe65e;</i>

                                        </button>
                                        <button class="layui-btn layui-btn-sm layui-btn-primary view-btn"
                                                title="冷水用量:@Cold_water_value|热水用量:@Hot_water_value|用电量:@Electric_value|备注:@bill.Note">
                                            <i class="layui-icon">&#xe60e;</i>
                                        </button>
                                        <button class="layui-btn layui-btn-sm layui-btn-primary edit-btn" data-id="@bill.Id"
                                                data-url="/Bill/Edit/@bill.Id" data-text="修改账单信息">
                                            <i class="layui-icon">&#xe642;</i>
                                        </button>
                                        <button class="layui-btn layui-btn-sm layui-btn-primary del-usedinfo" data-id="@bill.Id"
                                                data-url="/Bill/Delete/@bill.Id">
                                            <i class="layui-icon">&#xe640;</i>
                                        </button>
                                    </div>
                                </td>
                            </tr>}
                    </tbody>
                </table>
                <div class="page-wrap">
                    <ul class="pagination">
                        <li>
                            <span>
                                @if (ViewBag.pageIndex == 1)
                                {
                                    <a disabled="disabled"><</a>
                                }
                                else
                                {
                                    <a href="?pageIndex=@(ViewBag.pageIndex + 1)&pageSize=@(ViewBag.pageSize)&keyword=@(ViewBag.keyword)&stat=@(ViewBag.stat)"><</a>
                                }
                            </span>
                        </li>
                        <li>@ViewBag.pageIndex</li>
                        <li>
                            @if (ViewBag.count / ViewBag.pageIndex - 9 > 1)
                            {
                                <a href="?pageIndex=@(ViewBag.pageIndex + 1)&pageSize=@(ViewBag.pageSize)&keyword=@(ViewBag.keyword)&stat=@(ViewBag.stat)"><span>></span></a>
                            }
                            else
                            {
                                <a disabled="disabled"><span>></span></a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/layui/layui.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Content/js/common.js" type="text/javascript" charset="utf-8"></script>
    <script>
        layui.use(['form', 'jquery'], function () {
            var form = layui.form;
            var $ = layui.jquery;
            $("#stat").find("option[value='@ViewBag.stat']").attr("selected", 'true'); // 自动设置下拉选项状态
            form.render();
        });
    </script>
</body>
</html>