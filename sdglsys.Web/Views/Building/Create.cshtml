<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<meta name="renderer" content="webkit">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<title>添加宿舍楼</title>
		<link rel="stylesheet" type="text/css" href="~/Content/layui/css/layui.css" />
		<link rel="stylesheet" type="text/css" href="~/Content/css/admin.css" />
	</head>

	<body>
		<div class="wrap-container">
			<div class="layui-form" style="width: 90%;padding-top: 20px;">
				<div class="layui-form-item">
					<label class="layui-form-label">名称：</label>
					<div class="layui-input-block">
						<input maxlength="20" id='name' type="text" required lay-verify="required" placeholder="宿舍楼名称" autocomplete="off" class="layui-input">
					</div>
				</div>
				<div class="layui-form-item">
					<label class="layui-form-label">编号：</label>
					<div class="layui-input-block">
						<input maxlength="15" id='vid' type="text" required lay-verify="required" placeholder="便于记忆的自定义编号" autocomplete="off" class="layui-input">
					</div>
				</div>
				<div class="layui-form-item">
					<label class="layui-form-label">所属园区：</label>
					<div class="layui-input-block">
						<select class="layui-select" id="pid" lay-search>
							<option value="">请选择一个园区</option>
							@foreach(var dorm in ViewBag.dorms){
							<option value="@dorm.Id">@dorm.Nickname</option>
							}
						</select>
					</div>
				</div>
				<div class="layui-form-item">
					<label class="layui-form-label">备注：</label>
					<div class="layui-input-block">
						<textarea maxlength="255" id='note' placeholder="备注信息" autocomplete="off" class="layui-textarea"></textarea>
					</div>
				</div>
				<div class="layui-form-item">
					<div class="layui-input-block">
						<button class="layui-btn layui-btn-normal" lay-submit lay-filter="formDemo">保存</button>
					</div>
				</div>
			</div>
		</div>

		<script src="~/Content/layui/layui.js" type="text/javascript" charset="utf-8"></script>
		<script>
			layui.use(['form', 'jquery'], function() {
				var form = layui.form;
				$ = layui.jquery,
					form.render();
				//监听提交
				form.on('submit(formDemo)', function(data) {
					if($('#name').val().trim().length < 1) {
						layer.msg("宿舍楼名称不能为空");
						return false;
					}
					if($('#vid').val().trim().length < 1) {
						layer.msg("编号不能为空");
						return false;
					}
					if($('#pid').val().trim().length < 1) {
						layer.msg("请选择所属园区");
						return false;
					}
					var params = {
							"name": $('#name').val(),
							"vid": $("#vid").val(),
							"pid": $("#pid").val(),
							"note": $("#note").val()
                    }
                    /*
					$.post("/building/create", params, function(data) {
						if(data['code'] == 200) {
							var icon = 1;
						} else {
							var icon = 0;
						}
						layer.open({
							'icon': icon,
							'title': "温馨提示",
							'content': data['msg']
						});
                    }, "json");*/
                    $.ajax({
                        async: "false",
                        type: "post",
                        //dataType: "json",
                        //contentType: "application/json",
                        data: params,
                        url: "/building/create",
                        success: function (data) {data=JSON.parse(data);
                            layer.msg(data['msg'], {
                                'icon': data['code'] == 200 ? 1 : 0,
                            });
                        },
                        error: function (e) {
                            layer.open({
                                'icon': 0,
                                'title': "发生错误",
                                'content': "错误代码：" + e['status'] + "<br/>错误提示信息：" + e["statusText"]
                            });
                        }
                    });
				});
			});
		</script>
	</body>

</html>