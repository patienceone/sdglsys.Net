<!DOCTYPE html>
<html class="iframe-h">

<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>宿舍楼管理</title>
    <link rel="stylesheet" type="text/css" href="~/Content/layui/css/layui.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/admin.css" />
</head>

<body>
    <div class="wrap-container clearfix">
        <div class="column-content-detail">
            <form class="layui-form" action="">
                <div class="layui-form-item">
                    <div class="layui-inline tool-btn">
                        <button class="layui-btn layui-btn-sm layui-btn-normal addBtn" data-url="/building/create" data-text="添加宿舍楼"><i class="layui-icon">&#xe654;</i></button>
                        <button class="layui-btn layui-btn-sm layui-btn-normal reloadBtn"><i class="layui-icon layui-icon-refresh"></i></button>
                    </div>
                    <div class="layui-inline">
                        <input value="@ViewBag.keyword" type="text" name="keyword" placeholder="宿舍楼名称或编号" autocomplete="off" class="layui-input">
                    </div>
                    <button class="layui-btn layui-btn-sm layui-btn-normal" lay-submit="search">搜索</button>
                </div>
            </form>
            <div class="layui-form" id="table-list">
                <div>总共：@ViewBag.count 条记录</div><table class="layui-table" lay-even lay-skin="nob">
                    <colgroup>
                        <col width="50" class="hidden-xs">
                        <col>
                        <col class="hidden-xs">
                        <col>
                        <col>
                    </colgroup>
                    <thead>
                        <tr>
                            <th class="hidden-xs" width="50">ID</th>
                            <th>名称</th>
                            <th class="hidden-xs">编号</th>
                            <th>所属园区</th>
                            <th>状态</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in ViewBag.buildings)
                        {
                            <tr>
                                <td class="hidden-xs" width="50">@b.Id</td>
                                <td>@b.Nickname</td>
                                <td class="hidden-xs">@b.Vid</td>
                                <td>
                                    @b.PNickname
                                </td>
                                <td>
                                    @if (b.Is_active)
                                    {
                                        <div class="layui-btn layui-btn-xs layui-btn-normal">正常</div>}
                                    else
                                    {
                                        <div class="layui-btn layui-btn-xs layui-btn-disabled">已注销</div>}
                                </td>
                                <td>
                                    <div class="layui-btn-group">
                                        <button class="layui-btn layui-btn-sm layui-btn-primary edit-btn" data-text="编辑：@b.Nickname" data-id="@b.Id" data-url="/building/edit"><i class="layui-icon">&#xe642;</i></button>
                                        <button class="layui-btn layui-btn-sm layui-btn-primary del-btn" data-id="@b.Id" data-url="/building/delete/@b.Id"><i class="layui-icon">&#xe640;</i></button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="page-wrap">
                    <ul class="pagination">
                        <li>
                            <span>
                                @if (ViewBag.pageIndex == 1)
                                {
                                    <a disabled="disabled"><</a>
                                }
                                else
                                {
                                    <a href="?pageIndex=@(ViewBag.pageIndex + 1)&pageSize=@(ViewBag.pageSize)&keyword=@(ViewBag.keyword)"><</a>
                                }
                            </span>
                        </li>
                        <li>@ViewBag.pageIndex</li>
                        <li>
                            @if (ViewBag.count / ViewBag.pageIndex - 9 > 1)
                            {
                                <a href="?pageIndex=@(ViewBag.pageIndex + 1)&pageSize=@(ViewBag.pageSize)&keyword=@(ViewBag.keyword)"><span>></span></a>
                            }
                            else
                            {
                                <a disabled="disabled"><span>></span></a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/layui/layui.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Content/js/common.js" type="text/javascript" charset="utf-8"></script>
</body>

</html>