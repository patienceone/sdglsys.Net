<!DOCTYPE html>
<html class="iframe-h">

<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>公告管理</title>
    <link rel="stylesheet" type="text/css" href="~/Content/layui/css/layui.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/admin.css" />
</head>

<body>
    <div class="wrap-container clearfix">
        <div class="column-content-detail">
            <form class="layui-form" action="">
                <div class="layui-form-item">
                    <div class="layui-inline tool-btn">
                        <button class="layui-btn layui-btn-sm layui-btn-normal addBtn" data-url="/notice/create" data-text="发布新公告"><i class="layui-icon">&#xe654;</i></button>
                        <button class="layui-btn layui-btn-sm layui-btn-normal reloadBtn"><i class="layui-icon layui-icon-refresh"></i></button>
                    </div>
                    <div class="layui-inline">
                        <input value="@ViewBag.keyword" type="text" name="keyword" placeholder="请输入标题" autocomplete="off" class="layui-input">
                    </div>
                    <button class="layui-btn layui-btn-normal" lay-submit="search">搜索</button>
                </div>
            </form>
            <div class="layui-form" id="table-list">
                <div>总共：@ViewBag.count 条记录</div><table class="layui-table" lay-even lay-skin="nob">
                    <colgroup>
                        <col class="hidden-xs" width="50">
                        <col>
                        <col>
                        <col class="hidden-xs" width="150">
                        <col class="hidden-xs" width="150">
                        <col class="hidden-xs">
                        <col>
                    </colgroup>
                    <thead>
                        <tr>
                            <th class="hidden-xs">ID</th>
                            <th>标题</th>
                            <th>发布者</th>
                            <th class="hidden-xs">发布时间</th>
                            <th class="hidden-xs">修改时间</th>
                            <th class="hidden-xs">状态</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var notice in ViewBag.notices)
                        {
                            <tr>
                                <td class="hidden-xs">@notice.Id</td>
                                <td><a href="/notice/view/@notice.Id" target="_blank" title="点击查看该公告">@notice.Title</a></td>
                                <td>@notice.Login_name</td>
                                <td class="hidden-xs">@notice.Post_date</td>
                                <td class="hidden-xs">@notice.Mod_date</td>
                                <td class="hidden-xs">
                                    @if (notice.Is_active)
                                    {
                                        <button class="layui-btn layui-btn-mini layui-btn-normal">正常</button> }
                                    else
                                    {
                                        <button class="layui-btn layui-btn-mini layui-btn-disabled">已注销</button>}
                                </td>
                                <td>
                                    <div class="layui-inline">
                                        <button class="layui-btn layui-btn-sm layui-btn-primary edit-btn" data-text="编辑：@notice.Title" data-id="@notice.Id" data-url="/notice/edit/@notice.Id"><i class="layui-icon">&#xe642;</i></button>
                                        <button class="layui-btn layui-btn-sm layui-btn-primary del-btn" data-id="@notice.Id" data-url="/notice/delete/@notice.Id"><i class="layui-icon">&#xe640;</i></button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="page-wrap">
                    <ul class="pagination">
                        <li>
                            <span>
                                @if (ViewBag.pageIndex == 1)
                                {
                                    <a disabled="disabled"><</a>
                                }
                                else
                                {
                                    <a href="?pageIndex=@(ViewBag.pageIndex + 1)&pageSize=@(ViewBag.pageSize)&keyword=@(ViewBag.keyword)"><</a>
                                }
                            </span>
                        </li>
                        <li>@ViewBag.pageIndex</li>
                        <li>
                            @if (ViewBag.count / ViewBag.pageIndex - 9 > 1)
                            {
                                <a href="?pageIndex=@(ViewBag.pageIndex + 1)&pageSize=@(ViewBag.pageSize)&keyword=@(ViewBag.keyword)"><span>></span></a>
                            }
                            else
                            {
                                <a disabled="disabled"><span>></span></a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/layui/layui.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Content/js/common.js" type="text/javascript" charset="utf-8"></script>
</body>

</html>