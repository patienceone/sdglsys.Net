@model sdglsys.Entity.T_Notice
<!DOCTYPE html>
<html class="iframe-h">

<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>@Model.Notice_title</title>
    @Styles.Render("~/Content/css")
    <script src="~/Content/js/pako.min.js"></script>
    <script src="~/Content/js/zip.js"></script>
    <style>
        img {
            min-width: 98%;
        }
    </style>
</head>

<body>
    <div class="wrap-container clearfix">
        <table class="layui-table" lay-even lay-skin="nob">
            <colgroup class="layui-row">
                <col class="layui-col-xs10 layui-col-sm10 layui-col-md10">
            </colgroup>
            <thead>
                <tr>
                    <th style="text-align: center;font-size: 1.5em;line-height: 2em;">@Model.Notice_title</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="text-align: center;">
                        <script>
                            document.write(unzip('@Html.Raw(Model.Notice_content)'));
                        </script>
                        <div style="min-height:150px;max-height:150px;overflow:hidden"></div>
                    </td>
                </tr>
                <tr style="text-align: right;">
                    <td>@Model.Notice_login_name&ensp;发布于&ensp;@Model.Notice_mod_date</td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>