@model sdglsys.Entity.VUsed_total
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>登记使用记录</title>
    <link rel="stylesheet" type="text/css" href="~/Content/layui/css/layui.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/admin.css" />
</head>

<body>
    <div class="wrap-container">
        <div class="layui-form" style="width: 90%;padding-top: 20px;">
            <div class="layui-form-item">
                <label class="layui-form-label">宿舍名称：</label>
                <div class="layui-input-block">
                    @if (Model == null)
                    {
                        <input id="pid" value="该宿舍没有记录"  class="layui-input" />
                    }
                    else
                    {
                        <input id="pid" value="@Model.Dorm_Nickname,@Model.Building_Nickname,@Model.PNickname" disabled class="layui-input" />
                    }
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">冷水表读数：</label>
                <div class="layui-input-block">
                    <input value="@Model.Cold_water_value" maxlength="11" id='cold_water_value' type="text" placeholder="冷水表读数" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">热水表读数：</label>
                <div class="layui-input-block">
                    <input value="@Model.Hot_water_value" maxlength="11" id='hot_water_value' type="text" placeholder="热水表读数" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">电表读数：</label>
                <div class="layui-input-block">
                    <input value="@Model.Electric_value" maxlength="11" id='electric_value' type="text" placeholder="电表读数" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">备注：</label>
                <div class="layui-input-block">
                    <textarea maxlength="255" id='note' placeholder="备注信息" autocomplete="off" class="layui-textarea">@Model.Note</textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button class="layui-btn layui-btn-normal" lay-submit lay-filter="formDemo">保存</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/layui/layui.js" type="text/javascript" charset="utf-8"></script>
    <script>
        layui.use(['form', 'jquery'],
            function () {
                var form = layui.form;
                var $ = layui.jquery;
                form.render();
                // 监听下拉列表
                form.on('select(changeRoom)', function (data) {
                }); //监听提交
                form.on('submit(formDemo)', function (data) {
                    if ($('#pid').val().trim().length < 1) {
                        layer.msg("请先选择一个宿舍");
                        return false;
                    }
                    if ($("#cold_water_value").val().trim().length < 1 || $("#hot_water_value").val().trim().length < 1 || $("#electric_value").val().trim().length < 1) {
                        layer.msg("读表数值不能为空");
                        return;
                    }
                    var pid = $("#pid").val();
                    var params = {
                        "dorm_id": @(Model.Dorm_id),
                        "building_id": @(Model.Building_id),
                        "pid": @(Model.Pid),
                        "cold_water_value": $("#cold_water_value").val(),
                        "hot_water_value": $("#hot_water_value").val(),
                        "electric_value": $("#electric_value").val(),
                        "note": $("#note").val()
                    }
                    /*
                    $.post("/used/CreateUsedInfo/#Model.Pid", params, function (data) {
                        if (data['code'] == 200) {
                            var icon = 1;
                        } else {
                            var icon = 0;
                        }
                        layer.open({
                            'icon': icon,
                            'title': "温馨提示",
                            'content': data['msg']
                        });
                    }, "json");*/
                    $.ajax({
                        async: "false",
                        type: "post",
                        //dataType: "json",
                        //contentType: "application/json",
                        data: params,
                        url: "/used/CreateUsedInfo/@Model.Pid",
                        success: function (data) {data=JSON.parse(data);
                            layer.msg(data['msg'], {
                                'icon': data['code'] == 200 ? 1 : 0,
                            });
                        },
                        error: function (e) {
                            layer.open({
                                'icon': 0,
                                'title': "发生错误",
                                'content': "错误代码：" + e['status'] + "<br/>错误提示信息：" + e["statusText"]
                            });
                        }
                    });
                });
            });
    </script>
</body>

</html>