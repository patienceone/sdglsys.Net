<!DOCTYPE html>
<html class="iframe-h">

<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>系统角色管理</title>
    <link rel="stylesheet" type="text/css" href="~/Content/layui/css/layui.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/css/admin.css" />
</head>

<body>
    <div class="wrap-container clearfix">
        <div class="column-content-detail">
            <form class="layui-form" action="">
                <div class="layui-form-item">
                    <div class="layui-inline tool-btn">
                        <button class="layui-btn layui-btn-sm layui-btn-normal addBtn" data-url="/users/create" data-text="添加系统角色"><i class="layui-icon">&#xe654;</i></button>
                        <button class="layui-btn layui-btn-sm layui-btn-normal reloadBtn" title="刷新"><i class="layui-icon layui-icon-refresh"></i></button>
                    </div>
                    <div class="layui-inline">

                        <input value="@ViewBag.keyword" type="text" name="keyword" placeholder="关键字" autocomplete="off" class="layui-input">
                    </div>
                    <button class="layui-btn layui-btn-normal" lay-submit="search">搜索</button>
                </div>
            </form>
            <div class="layui-form" id="table-list">
                <div>总共：@ViewBag.count 条记录</div><table class="layui-table" lay-even lay-skin="nob">
                    <colgroup>
                        <col width="50" class="hidden-xs">
                        <col class="hidden-xs">
                        <col>
                        <col class="hidden-xs">
                        @if ((int)Session["role"] > 2)
                        {
                            <col class="hidden-xs">}
                        <col class="hidden-xs">
                        <col>
                    </colgroup>
                    <thead>
                        <tr>
                            <th class="hidden-xs">ID</th>
                            <th class="hidden-xs">用户名</th>
                            <th>姓名</th>
                            <th class="hidden-xs">类型</th>
                            @if ((int)Session["role"] > 2)
                            {
                                <th class="hidden-xs">所属园区</th>
                            }
                            <th class="hidden-xs">状态</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in ViewBag.users)
                        {
                            <tr>
                                <td class="hidden-xs">@user.Id</td>
                                <td class="hidden-xs">@user.Login_name</td>
                                <td>@user.Nickname</td>
                                <td class="hidden-xs">
                                    @{
                                        var role_name = "";
                                    }
                                    @switch ((int)user.Role)
                                    {
                                        case 1:
                                            role_name = "辅助登记员";
                                            break;
                                        case 2:
                                            role_name = "宿舍管理员";
                                            break;
                                        case 3:
                                            role_name = "系统管理员";
                                            break;
                                    }
                                    @role_name
                                </td>
                                @if ((int)Session["role"] > 2)
                                {
                                    <td class="hidden-xs">
                                        @foreach (var dorm in ViewBag.dorms)
                                        {
                                            if (user.Pid == dorm.Id)
                                            {@dorm.Nickname}
                                    }
                                    </td>
                                }
                                <td class="hidden-xs">
                                    @if (user.Is_active)
                                    {
                                        <button class="layui-btn layui-btn-xs layui-btn-normal">正常</button> }
                                    else
                                    {
                                        <button class="layui-btn layui-btn-xs layui-btn-disabled">已注销</button>
                                    }

                                </td>
                                <td>
                                    <div class="layui-btn-group">
                                        <button class="layui-btn layui-btn-sm layui-btn-primary edit-btn" data-text="重置 @user.Login_name 的密码" data-id="@user.Id" data-url="/users/reset"><i class="layui-icon">&#xe673;</i></button>
                                        <button class="layui-btn layui-btn-sm layui-btn-primary edit-btn" data-text="编辑 @user.Login_name 信息" data-id="@user.Id" data-url="/users/edit"><i class="layui-icon">&#xe642;</i></button>
                                        <button class="layui-btn layui-btn-sm layui-btn-primary del-btn" data-id="@user.Id" data-url="/users/delete/@user.Id"><i class="layui-icon">&#xe640;</i></button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="page-wrap">
                    <ul class="pagination">
                        <li>
                            <span>
                                @if (ViewBag.pageIndex == 1)
                                {
                                    <a disabled="disabled"><</a>
                                }
                                else
                                {
                                    <a href="?pageIndex=@(ViewBag.pageIndex + 1)&pageSize=@(ViewBag.pageSize)&keyword=@(ViewBag.keyword)"><</a>
                                }
                            </span>
                        </li>
                        <li>@ViewBag.pageIndex</li>
                        <li>
                            <span>
                                @if (ViewBag.count / ViewBag.pageIndex - 9 > 1)
                                {
                                    <a href="?pageIndex=@(ViewBag.pageIndex + 1)&pageSize=@(ViewBag.pageSize)&keyword=@(ViewBag.keyword)">
                                        >
                                    </a>
                                }
                                else
                                {
                                    <a disabled="disabled">></a>
                                }
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!--div class="layui-footer">
        {%if 't' in session%}<p style="text-align: center;">页面执行时间：{{session['t']}}s</p>{%endif%}
    </div-->
    <script src="~/Content/layui/layui.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Content/js/common.js" type="text/javascript" charset="utf-8"></script>
</body>

</html>